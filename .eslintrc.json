{
	"root": true,
	"env": {
		"browser": true,
		"es2017": true,
		"node": true,
		"jest": true,
		"cypress/globals": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"plugins": ["react", "cypress"],
	"settings": {
		"react": {
			"version": "^18.3.1"
		}
	},
	"rules": {
		"no-unused-vars": "warn",
		"no-mixed-spaces-and-tabs": "off"
	}
}
